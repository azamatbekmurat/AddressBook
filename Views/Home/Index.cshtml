<h1>Address Book</h1>
@if (@Model.Count == 0)
{
  <h3>There is no contacts in the address book!</h3>
}
<ul>

  @foreach(var contact in Model)
  {

  <li>Contact Name: @contact.GetName()</li>
    <ul>
      <li>Phone Number: @contact.GetPhone()</li>
      <li>Address info: @contact.GetAddress().GetAddressInfo()</li>
    </ul>
  }
</ul>
<p><a href="/contacts/new">Add another contact.</a></p>

<form action="/contacts/delete" method="post">
  <button type="submit" name="button">Clear All contacts from the List</button>
</form>
